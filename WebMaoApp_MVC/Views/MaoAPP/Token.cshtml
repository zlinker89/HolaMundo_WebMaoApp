@{
    Layout = "~/Views/MaoAPP/_Layout.cshtml";
}
<style>
    .btnSend:hover{
        background:rgba(150,0,0,1) !important;
    }
</style>

<div class="container" ng-init="seleccion = 'Token'" >
    <div class="col-sm-8 col-sm-offset-2" style="background:rgba(0,0,0,0.7); color:white; padding:20px" ng-controller="TokenCtrl">
        <div class="col-sm-12">
            <h3>Dispositivos registrados: {{Total}}</h3>
        </div>
        <div class="col-sm-12">
            <form>
                <div class="form-group">
                    <label for="title">Titulo</label>
                    <input type="text" class="form-control" ng-model="obj.title" id="title" placeholder="Ingresar el titulo de la notificacion">
                </div>
                <div class="form-group">
                    <label for="mensaje">Mensaje</label>
                    <textarea class="form-control" id="mensaje"  ng-model="obj.body" rows="3" placeholder="Ingresar el mensaje de la notificacion"></textarea>
                </div>
                <div class="text-center">
                    <button class="btn btnSend" style="background:rgba(155,0,0,0.7); color:white" ng-click="SendMensaje()" ng-show="!enviando">
                        Enviar Mensaje
                    </button>
                    <div ng-show="enviando && Cuenta != Total">
                        Mensaje enviado a {{Cuenta}} Dispositivos.
                    </div>
                    <div ng-show="Cuenta == Total">
                        Mensaje enviado a todos los dispositivos
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>