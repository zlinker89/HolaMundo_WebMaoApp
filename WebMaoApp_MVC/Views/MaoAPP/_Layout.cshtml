<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/styles/FileCSS")
</head>
<body ng-app="webMaoApp">
    <!--[if lte IE 8]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Add your site or application content here -->
    <div id="loading-bar-container"></div>
    <div class="header">
        <div class="navbar navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#js-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#/">
                        <img src="@Url.Content("~/images/logo.61ec392f.png")" alt="" style="transform: translate(0px,-15px)">
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="js-navbar-collapse">
                    <ul class="nav navbar-nav">
@if (Request.IsAuthenticated)
{
                        <li ng-class="{active: seleccion === 'QR'}" ng-click="seleccion === 'QR'">@Html.ActionLink("QR", "Index", "MaoAPP", routeValues: null, htmlAttributes: new { id = "maoappLink" })</li>
                        <li ng-class="{active: seleccion === 'Token'}" ng-click="seleccion === 'Token'">@Html.ActionLink("Notificaciones", "Token", "MaoAPP", routeValues: null, htmlAttributes: new { id = "maoappLink" })</li>
                        <li ng-class="{active: seleccion === 'Promocion'}" ng-click="seleccion === 'Promocion'">@Html.ActionLink("Promociones", "Promocion", "MaoAPP", routeValues: null, htmlAttributes: new { id = "maoappLink" })</li>
}
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <!-- Google Analytics: change UA-XXXXX-X to be your site's ID -->
    <script>
       !function(A,n,g,u,l,a,r){A.GoogleAnalyticsObject=l,A[l]=A[l]||function(){
       (A[l].q=A[l].q||[]).push(arguments)},A[l].l=+new Date,a=n.createElement(g),
       r=n.getElementsByTagName(g)[0],a.src=u,r.parentNode.insertBefore(a,r)
       }(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

       ga('create', 'UA-XXXXX-X');
       ga('send', 'pageview');
    </script>
    @Scripts.Render("~/bundles/FilesJS").
    @RenderSection("scripts", required: false)
</body>
</html>
